{
  "name": "vscode-random",
  "displayName": "vscode-random",
  "description": "An extension to generate random stuff",
  "version": "0.0.1",
  "publisher": "jrebocho",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.randomByte"
  ],
  "main": "./build/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.randomByte",
        "title": "Random: Byte"
      }
    ]
  },
  "scripts": {
    "compile": "rimraf build & babel src --out-dir build",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "jest"
  },
  "jest": {
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.js?$"    
  },
  "standard": {
    "globals": [ 
      "describe", 
      "it",
      "expect" 
    ]
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "eslint": "^3.6.0",
    "jest": "^18.0.0",
    "mocha": "^2.3.3",
    "rimraf": "^2.5.4",
    "standard": "^8.6.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "chance": "^1.0.4"
  }
}
